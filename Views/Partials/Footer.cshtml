@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    var rootModel = (Model.AncestorOrSelf<HomePage>());
}
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <ul class="social">
                    <li><a href="@(!string.IsNullOrEmpty(rootModel.LinkFacebook.Url.ToString()) ? rootModel.LinkFacebook.Url.ToString() : "#")"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="@(!string.IsNullOrEmpty(@rootModel.LinkTwitter.Url) ? @rootModel.LinkTwitter.Url : "#")"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="@(!string.IsNullOrEmpty(@rootModel.LinkLinkedin.Url) ? @rootModel.LinkLinkedin.Url : "#")"><i class="fa fa-linkedin"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 pt-4 pb-4">
                    @((rootModel.FooterText != null || rootModel.FooterText.ToString() != "") ? rootModel.FooterText  : "Copyright &copy; 2020 Softy Pinko Company - Design: TemplateMo")
            </div>
        </div>
    </div>
</footer>