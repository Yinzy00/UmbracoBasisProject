@using Umbraco.Cms.Core.Models.Blocks;
@using Umbraco.Cms.Core.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem<BlockPricingPlan>>
<!-- ***** Pricing Plans Start ***** -->
<section class="section colored" id="pricing-plans">
    <div class="container">
        <!-- ***** Section Title Start ***** -->
        <div class="row">
            <div class="col-lg-12">
                <div class="center-heading">
                    <h2 class="section-title">
                        @Model.Content.Title
                    </h2>
                </div>
            </div>
            <div class="offset-lg-3 col-lg-6">
                <div class="center-text">
                    @Model.Content.Body
                </div>
            </div>
        </div>
        <!-- ***** Section Title End ***** -->

        <div class="row">
            @{
                foreach (var card in Model.Content.Cards)
                {
                    var cardContent = (BlockPricingPlanCard)card.Content;
                    Link link = cardContent.Link;
                    <div class="col-lg-4 col-md-6 col-sm-12" data-scroll-reveal="enter bottom move 50px over 0.6s after 0.2s">
                        <div class="pricing-item">
                            <div class="pricing-header">
                                <h3 class="pricing-title">
                                    @cardContent.Title
                                </h3>
                            </div>
                            <div class="pricing-body">
                                <div class="price-wrapper">
                                    <span class="currency">@cardContent.Currency</span>
                                    <span class="price">@cardContent.Price</span>
                                    <span class="period">@cardContent.Period</span>
                                </div>
                                <div>
                                    @cardContent.Info
                                </div>
                                @*<ul class="list">
                                    <li class="active">60 GB space</li>
                                    <li class="active">600 GB transfer</li>
                                    <li class="active">Pro Design Panel</li>
                                    <li>15-minute support</li>
                                    <li>Unlimited Emails</li>
                                    <li>24/7 Security</li>
                                    </ul>*@
                            </div>
                            <div class="pricing-footer">
                                @if (link != null)
                                {
                                    <a href="@link.Url" class="main-button">
                                        @link.Name
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- ***** Pricing Plans End ***** -->