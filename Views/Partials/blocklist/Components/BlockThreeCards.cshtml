@using Umbraco.Cms.Core.Models.Blocks;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem<BlockThreeCards>>

<section class="section home-feature">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @{
                        foreach (var block in @Model.Content.BlockList)
                        {
                            var blockContent = (BlockThreeCardsCard)block.Content;
                            <div class="col-lg-4 col-md-6 col-sm-6 col-12" data-scroll-reveal="enter bottom move 50px over 0.6s after 0.6s">
                                <div class="features-small-item">
                                    <div class="icon" style="overflow:hidden;">
                                        <i>
                                            @{
                                                var typedMediaPickerSingle3 = blockContent.Image;
                                                if (typedMediaPickerSingle3 != null)
                                                {
                                                    <img src="@typedMediaPickerSingle3.MediaUrl()" style="max-width:100%;" alt="@typedMediaPickerSingle3.Value("alt")" />
                                                }
                                            }
                                        </i>
                                    </div>
                                    <h5 class="features-title">
                                        @blockContent.Title
                                    </h5>
                                    @blockContent.Body
                                </div>
                            </div>
                            //@Html.GetBlockListHtml(Model.Content.BlockList)
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>